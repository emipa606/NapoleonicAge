<Defs>
  <!-- FRENCH -->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_FrenchLine</defName>
    <label>French Line Infantry Tunic</label>
    <description>Standard uniform for French line infantry, designed to afford a level of comfort. Multiple layers absorb some level of blunt force, however sharp objects, including musket balls, have no trouble breaking through.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>FrenchEarlyTechnology</researchPrerequisite>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
    <graphicData>
      <texPath>Things/France/Uniforms/FrenchLine/FrenchLine</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <MaxHitPoints>150</MaxHitPoints>
      <MarketValue>250</MarketValue>
      <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.10</ArmorRating_Sharp>
      <Insulation_Cold>10</Insulation_Cold>
      <Insulation_Heat>5</Insulation_Heat>
      <Mass>2</Mass>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <costList>
      <Cloth>50</Cloth>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <equippedStatOffsets>
      <MoveSpeed>-0.05</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <layers>
        <li>OnSkin</li>
      </layers>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/France/Uniforms/FrenchLine/FrenchLine</wornGraphicPath>
      <tags>
        <li>FrenchInfantryApparel</li>
      </tags>
    </apparel>
  </ThingDef>
